{
  "name": "next-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:verbose": "LOG_LEVEL=debug next dev --turbopack",
    "dev:test": "NODE_ENV=test NEXT_PUBLIC_ENV=test NEXT_PUBLIC_USE_MOCKS=true next dev --turbopack",
    "dev:prod": "NODE_ENV=production NEXT_PUBLIC_ENV=production next dev --turbopack",
    "build": "next build",
    "build:test": "NODE_ENV=test NEXT_PUBLIC_ENV=test NEXT_PUBLIC_USE_MOCKS=true next build",
    "build:prod": "NODE_ENV=production NEXT_PUBLIC_ENV=production next build",
    "start": "next start",
    "start:test": "NODE_ENV=test NEXT_PUBLIC_ENV=test NEXT_PUBLIC_USE_MOCKS=true next start",
    "start:prod": "NODE_ENV=production NEXT_PUBLIC_ENV=production next start",
    "lint": "next lint",
    "env": "node scripts/set-env.js",
    "env:dev": "node scripts/set-env.js development",
    "env:test": "node scripts/set-env.js test",
    "env:prod": "node scripts/set-env.js production",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run --no-watch --no-ui --silent --reporter=verbose",
    "coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "prepare": "husky",
    "commit": "cz"
  },
  "dependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@hookform/resolvers": "^4.1.3",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/themes": "^3.2.1",
    "@vitest/coverage-v8": "^3.0.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.484.0",
    "next": "15.2.4",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "tailwind-merge": "^3.0.2",
    "tw-animate-css": "^1.2.4",
    "zod": "^3.24.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.0.17",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20.17.27",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^3.0.9",
    "autoprefixer": "^10.4.21",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9",
    "eslint-config-next": "15.2.4",
    "happy-dom": "^17.4.4",
    "husky": "^9.0.11",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.0.17",
    "typescript": "^5"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
